    <header>
      <div class="header-logo">
        <%= link_to "Pax", root_path, class: "Editlink" %>
      </div>
      <div class="header-list">
        <ul>
          <li><%= link_to "繊細さんって？", about_hsp_path, class: "Editlink" %></li>
          <% if user_logged_in? %>
          <li><%= link_to "お気に入りを探す", href="/#restraunt", class: "Editlink" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "マイページ更新", current_user, class: "Editlink" %></li>
              <li><%= link_to "お気に入り", '#', class: "Editlink" %></li>
              <li><%= link_to "口コミ", '#', class: "Editlink" %></li>
              <li>
                <%= link_to "ログアウト", logout_path, class: "Editlink", method: :delete %>
              </li>
            </ul>
          </li>
          <% elsif facility_logged_in? %>
            <li><%= link_to "施設登録", add_my_facilities_path, class: "Editlink" %></li>
            <li><%= link_to "マイページ", facility_path(id: current_facility.id), class: "Editlink" %></li>
            <li><%= link_to "ログアウト", facilities_logout_path, method: :delete, class: "Editlink" %></li>
          <% else %>
            <li><%= link_to "新規登録", signup_path, class: "Editlink" %></li>
            <li><%= link_to "ログイン", login_path, class: "Editlink" %></li>
          <% end %>
        </ul>
      </div>
      <div class="clear"></div>
    </header>
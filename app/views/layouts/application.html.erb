<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Pax</title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="containers">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>

    <div class="rain">
      <a class="btn btn-link" href="park"><img src="/assets/059fj21329_TP_V.jpeg" alt="park" class="facility-img"></a><br>
      <%= link_to "公園", park_path, id: "park", class: "Editlink" %>
    </div>
    <div class="rain">
      <a class="btn btn-link" href="library"><img src="/assets/elly20160628465420_TP_V.jpeg" alt="library" class="facility-img"></a><br>
      <%= link_to "図書館", library_path, id: "library", class: "Editlink" %>
    </div>
    <div class="rain">
      <a class="btn btn-link" href="temple"><img src="/assets/kyotoDSC_64430190_TP_V.jpg" alt="shrine/temple" class="facility-img"></a><br>
      <%= link_to "神社・お寺", temple_path, id: "temple", class: "Editlink" %>

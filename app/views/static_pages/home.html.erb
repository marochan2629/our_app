  <div class="facility">
    <div class="rain">
      <a class="btn btn-link" href="restraunt"><img src="/assets/4030290_m.jpeg" alt="restraunt" class="facility-img"></a><br>
      <%= link_to "飲食店", restraunt_path, id: "restraunt", class: "Editlink" %>
